<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InvisibleTheme" parent="android:Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_blue_800</item>
        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.Dialog.Black" parent="AppTheme.Dialog">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorItemBackground">@android:color/black</item>
        <item name="colorItemLine">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar.Black" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/alwaysBlack</item>
        <item name="android:colorBackgroundCacheHint">@color/alwaysBlack</item>
        <item name="android:windowBackground">@color/alwaysBlack</item>
        <item name="colorItemBackground">@color/alwaysBlack</item>
        <item name="colorItemLine">@android:color/transparent</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Base" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/material_grey_200</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorSecondaryVariant">@color/material_blue_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorError">@color/row_error_red</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:buttonStyle">@style/BrandButtonStyle</item>

        <item name="inactiveRow">@color/row_inactive</item>
        <item name="colorItemBackground">@color/item_background</item>
        <item name="colorPreferenceBackground">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="colorItemLine">@color/color_item_line</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">?attr/colorItemBackground</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.AppTheme.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AppTheme.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AppTheme.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AppTheme.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AppTheme.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AppTheme.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AppTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.AppTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AppTheme.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppTheme.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.AppTheme.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.AppTheme.Overline</item>
        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/material_blue_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="AppTheme.Main.LightActionBar" parent="AppTheme.Main">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.LightBackground</item>
    </style>

    <style name="AppTheme.Main.DarkActionBar" parent="AppTheme.Main">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.DarkBackground</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/alwaysBlack</item>

        <item name="colorPrimary">@color/alwaysBlack</item>
        <item name="colorPrimaryVariant">@color/alwaysBlack</item>
        <item name="colorOnPrimary">@color/alwaysWhite</item>

        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorSecondaryVariant">@color/material_blue_900</item>
        <item name="colorOnSecondary">@color/alwaysWhite</item>

        <item name="colorSurface">@color/alwaysBlack</item>
        <item name="colorOnSurface">@color/alwaysWhite</item>

        <item name="android:colorBackground">@color/alwaysBlack</item>
        <item name="colorOnBackground">@color/alwaysWhite</item>

        <item name="colorError">@color/row_error_red</item>
        <item name="colorOnError">@color/alwaysWhite</item>

        <item name="colorControlNormal">@color/alwaysWhite</item>

        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorItemBackground">@android:color/black</item>
        <item name="colorPreferenceBackground">@android:color/black</item>
        <item name="colorItemLine">@color/material_grey_800_</item>
    </style>

    <style name="AppTheme.Black.LightActionBar" parent="AppTheme.Black">
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.LightBackground</item>
    </style>

    <style name="AppTheme.Black.DarkActionBar" parent="AppTheme.Black">
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.DarkBackground</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AlertDialog" parent="@style/Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/material_grey_200</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorSecondaryVariant">@color/material_blue_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/alwaysBlack</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Changelog" />

    <style name="Changelog.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Changelog.Subtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Changelog.ActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar.Primary">
    </style>

    <style name="AppTheme.ActionBar.LightBackground" parent="@style/ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@color/alwaysBlack</item>
    </style>

    <style name="AppTheme.ActionBar.DarkBackground" parent="@style/ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextAppearance.AppTheme.Headline1" parent="TextAppearance.MaterialComponents.Headline1" />
    <style name="TextAppearance.AppTheme.Headline2" parent="TextAppearance.MaterialComponents.Headline2" />
    <style name="TextAppearance.AppTheme.Headline3" parent="TextAppearance.MaterialComponents.Headline3" />
    <style name="TextAppearance.AppTheme.Headline4" parent="TextAppearance.MaterialComponents.Headline4" />
    <style name="TextAppearance.AppTheme.Headline5" parent="TextAppearance.MaterialComponents.Headline5" />
    <style name="TextAppearance.AppTheme.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TextAppearance.AppTheme.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TextAppearance.AppTheme.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="TextAppearance.AppTheme.Body1" parent="TextAppearance.MaterialComponents.Body1" />
    <style name="TextAppearance.AppTheme.Body2" parent="TextAppearance.MaterialComponents.Body2" />
    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.MaterialComponents.Button" />
    <style name="TextAppearance.AppTheme.Caption" parent="TextAppearance.MaterialComponents.Caption" />
    <style name="TextAppearance.AppTheme.Overline" parent="TextAppearance.MaterialComponents.Overline" />
</resources>