<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="InvisibleTheme" parent="android:Theme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme" />

    <style name="AppTheme.Dialog" parent="@style/Theme.Material3.DayNight.Dialog">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_blue_800</item>
        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.Dialog.Black" parent="AppTheme.Dialog">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorItemBackground">@android:color/black</item>
        <item name="colorItemLine">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="AppTheme.Dialog.NoActionBar.Black" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorBackground">@color/alwaysBlack</item>
        <item name="android:colorBackgroundCacheHint">@color/alwaysBlack</item>
        <item name="android:windowBackground">@color/alwaysBlack</item>
        <item name="colorItemBackground">@color/alwaysBlack</item>
        <item name="colorItemLine">@android:color/transparent</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_major</item>
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.Base" parent="@style/Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/material_grey_200</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorSecondaryVariant">@color/material_blue_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="colorError">@color/row_error_red</item>
        <item name="colorOnError">@color/white</item>

        <item name="android:buttonStyle">@style/BrandButtonStyle</item>

        <item name="inactiveRow">@color/row_inactive</item>
        <item name="colorItemBackground">@color/item_background</item>
        <item name="colorPreferenceBackground">?android:attr/selectableItemBackgroundBorderless
        </item>
        <item name="colorItemLine">@color/color_item_line</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowBackground">?attr/colorItemBackground</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar</item>
        <!--Material type attributes-->
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.AppTheme.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.AppTheme.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.AppTheme.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.AppTheme.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.AppTheme.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.AppTheme.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.AppTheme.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.AppTheme.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.AppTheme.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.AppTheme.BodySmall</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.AppTheme.LabelMedium</item>
        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
    </style>

    <style name="BrandButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/material_blue_500</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="AppTheme.Main.LightActionBar" parent="AppTheme.Main">
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.LightBackground</item>
    </style>

    <style name="AppTheme.Main.DarkActionBar" parent="AppTheme.Main">
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.DarkBackground</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme.Base">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/alwaysBlack</item>

        <item name="colorPrimary">@color/alwaysBlack</item>
        <item name="colorPrimaryVariant">@color/alwaysBlack</item>
        <item name="colorOnPrimary">@color/alwaysWhite</item>

        <item name="colorSecondary">@color/material_blue_800_high_contrast</item>
        <item name="colorSecondaryVariant">@color/material_blue_900_high_contrast</item>
        <item name="colorOnSecondary">@color/alwaysWhite</item>

        <item name="colorSurface">@color/alwaysBlack</item>
        <item name="colorOnSurface">@color/alwaysWhite</item>

        <item name="android:colorBackground">@color/alwaysBlack</item>
        <item name="colorOnBackground">@color/alwaysWhite</item>

        <item name="colorError">@color/row_error_red</item>
        <item name="colorOnError">@color/alwaysWhite</item>

        <item name="colorControlNormal">@color/alwaysWhite</item>

        <item name="android:colorBackgroundCacheHint">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorItemBackground">@android:color/black</item>
        <item name="colorPreferenceBackground">@android:color/black</item>
        <item name="colorItemLine">@color/material_grey_800_</item>
    </style>

    <style name="AppTheme.Black.LightActionBar" parent="AppTheme.Black">
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.LightBackground</item>
    </style>

    <style name="AppTheme.Black.DarkActionBar" parent="AppTheme.Black">
        <item name="android:actionBarTheme">@style/AppTheme.ActionBar.DarkBackground</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Base">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AlertDialog" parent="@style/Theme.Material3.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/material_grey_200</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/material_blue_800</item>
        <item name="colorSecondaryVariant">@color/material_blue_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/alwaysBlack</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar" />

    <style name="AppTheme.ActionBar.LightBackground" parent="@style/ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@color/alwaysBlack</item>
        <item name="colorControlNormal">@color/alwaysBlack</item>
    </style>

    <style name="AppTheme.ActionBar.DarkBackground" parent="@style/ThemeOverlay.MaterialComponents.ActionBar.Primary">
        <item name="android:textColorPrimary">@color/alwaysWhite</item>
        <item name="colorControlNormal">@color/alwaysWhite</item>
    </style>

    <style name="AppTheme.PopupMenu" />

    <style name="AppTheme.PopupMenu.LightBackground" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="popupMenuBackground">@color/alwaysBlack</item>
    </style>

    <style name="AppTheme.PopupMenu.DarkBackground" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="popupMenuBackground">@color/alwaysBlack</item>
    </style>

    <style name="TextAppearance.AppTheme.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall" />

    <style name="TextAppearance.AppTheme.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge" />

    <style name="TextAppearance.AppTheme.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium" />

    <style name="TextAppearance.AppTheme.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall" />

    <style name="TextAppearance.AppTheme.TitleLarge" parent="TextAppearance.Material3.TitleLarge" />

    <style name="TextAppearance.AppTheme.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.AppTheme.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextAppearance.AppTheme.BodyLarge" parent="TextAppearance.Material3.BodyLarge" />

    <style name="TextAppearance.AppTheme.BodyMedium" parent="TextAppearance.Material3.BodyMedium" />

    <style name="TextAppearance.AppTheme.BodySmall" parent="TextAppearance.Material3.BodySmall" />

    <style name="TextAppearance.AppTheme.LabelMedium" parent="TextAppearance.Material3.LabelMedium" />
</resources>